<Project Sdk="Microsoft.NET.Sdk">


  <Target Name="PostcompileScript" AfterTargets="Build" Condition=" '$(IsCrossTargetingBuild)' != 'true' ">
    <Message Importance="High" Text="This is a --------one time only!!!--------- test" />
  </Target>

  
  
  
  
<!-- must upgrade vs to vry latest version. See black on yellow flag in vs. -->
  <Target Name="CopyPackage" AfterTargets="Pack">
    <Message Text="-----copying--net452;------- $(OutputPath)" Importance="high" />

    <ItemGroup>
      <PackageFile Include="$(OutputPath)$(PackageId).*.nupkg" />
    </ItemGroup>

    <!-- 
    Cannot use Move here, otherwise you get error saying the file is in use by another process 
    Have to use wildcard * here. If you use the exact version, you will get a file not found error when one or more parts
    of the version start with 0. In that case, the nuget pack drops the leading 0 (!), so the actual name of the .nupkg file
    doesn't match the file name you would generate here.
    -->
    <Copy SourceFiles="%(PackageFile.Identity)" DestinationFolder="g:\temp\packageshare\" />
    <!--   <Copy SourceFiles="%(PackageFile.Identity)" DestinationFolder="g:\temp\packageshare\" /> -->
    <!--    <Copy SourceFiles="$(OutputPath)$(PackageId).$(PackageVersion).nupkg" DestinationFolder="g:\temp\packageshare\" />   -->
  </Target>

  
  
  
  
<!--
<TargetFrameworks>net452;netstandard1.6</TargetFrameworks>
    <IsPackable>true</IsPackable>

-->

  <PropertyGroup>
    <GenerateNugetPackage Condition=" '$(GenerateNugetPackage)' == '' ">true</GenerateNugetPackage>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GeneratePackageOnBuild Condition=" ('$(Configuration)' == 'Release') And ('$(GenerateNugetPackage)' == 'true') ">true</GeneratePackageOnBuild>
    <MajorPackageVersion>5</MajorPackageVersion>
    <PackageVersion>$(MajorPackageVersion).$([System.DateTime]::Now.ToString(yyMMdd)).$([System.DateTime]::Now.ToString(hhmmss))</PackageVersion>
    
    
    



    <TargetFrameworks>net452;netstandard1.6</TargetFrameworks>
    <Title>JSNLog.AspNetCore - JavaScript Logging Package for ASP.NET CORE</Title>
    <PackageId>JSNLog.AspNetCore</PackageId>
    
    
    
    <Authors>Mattijs Perdeck</Authors>
    <Description>JavaScript logging package that lets you log exceptions, AJAX timeouts and other client side events in your server side log. Supports ASP.NET 4.x (.Net 4.5.2+) and ASP.NET CORE (.NETStandard 1.6).</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>http://jsnlog.com</PackageProjectUrl>
    <PackageIconUrl>http://jsnlog.com/Nuget/icon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/mperdeck?tab=repositories&amp;q=jsnlog&amp;type=&amp;language=</RepositoryUrl>
    <Copyright>Copyright 2017 Mattijs Perdeck</Copyright>
    <PackageTags>JavaScript logging exceptions ajax log4net nlog elmah serilog ASP.NET 4.x ASP.NET CORE .NETStandard</PackageTags>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>jsnlog.strongname.snk</AssemblyOriginatorKeyFile>
    <DelaySign>False</DelaySign>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net452'">
    <DefineConstants>NET452</DefineConstants>
    <DefineConstants>SUPPORTSXML</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard1.6'">
    <DefineConstants>NETSTANDARD</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="('$(BuildFor)' == 'Core') Or ('$(TargetFramework)' == 'netstandard1.6')">
    <DefineConstants>RunningAspNetCore</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="1.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.1.3" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="1.1.2" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.Web" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net452'">
    <PackageReference Include="Common.Logging">
      <Version>3.3.1</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.TagHelpers">
      <Version>1.1.3</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.Owin">
      <Version>2.1.0</Version>
    </PackageReference>
    <PackageReference Include="Newtonsoft.Json">
      <Version>9.0.1</Version>
    </PackageReference>
  </ItemGroup>
  <Target Name="LogProperties" BeforeTargets="PrepareForBuild">
	<Message Text="----------------" Importance="high" />
	<Message Text="TargetFramework = $(TargetFramework)" Importance="high" />
	<Message Text="BuildFor = $(BuildFor)" Importance="high" />
	<Message Text="----------------" Importance="high" />
  </Target>
</Project>

